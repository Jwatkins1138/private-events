<%= simple_form_for(GuestList.new, :url => {:action => "create" })  do |f| %>
  <%= f.error_notification %>
  <%= f.hidden_field :event_id, :value => (event.id) %>
  <%= f.hidden_field :user_id, :value => (current_user.id) %>
    <div class='field'>
      <div class='control'>
        <%= f.button :submit, "submit", class: 'button is-info is-medium' %>
      </div>
    </div>
    <% end %>