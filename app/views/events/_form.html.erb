<div class='section'>
  <div class='container'>
  <div class='columns is-centered'>
  <div class='column is-4'>
  <h2 class='title is-2'>New Event</h2>

  <%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>

    <div class='field'>
      <div class='control'>
        <%= f.input :title,
                    required: true,
                    input_html: { class: 'input' },
                    wrapper: false,
                    label_html: { class: 'label'} %>
      </div>
    </div>

    <div class='field'>
      <div class='control'>
        <%= f.input :location,
                    required: true,
                    input_html: { class: 'input' },
                    wrapper: false,
                    label_html: { class: 'label'} %>
      </div>
    </div>

    <div class='field'>
      <div class='control'>
        <%= f.input :description,
                    required: true,
                    autofocus: true,
                    input_html: { class: 'textarea ' },
                    wrapper: false,
                    label_html: { class: 'label'} %>
      </div>
    </div>            
    <div class='field'>
      <div class='control'>            
        <%= f.input :event_date,
                    required: true,
                    input_html: { class: 'input' },
                    wrapper: false,
                    label_html: { class: 'label'}  %>
      </div>
    </div>            
    <div class='field'>
      <div class='control'>
        <%= f.button :submit, "submit", class: 'button is-info is-medium' %>
      </div>
    </div>
    <% end %>
    <br />

    